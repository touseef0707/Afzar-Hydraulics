{
  "rules": {
    ".read": "auth != null",
    ".write": "auth != null",
    "projects": {
      ".read": "auth != null",
      ".write": "auth != null",
      ".indexOn": ["createdBy"],
      "$projectId": {
        ".read": "auth != null",
        ".write": "auth != null && (data.child('createdBy').val() === auth.uid || !data.exists())"
      }
    },
    "flows": {
      ".read": "auth != null",
      ".write": "auth != null"
    }
  }
}